      <ul>
      <% @auditorium.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <h1><%= @theater.name %>: Auditorium <%= @auditorium.name %></h1>
  <h3>Seating Capacity: <%= @auditorium.seating_capacity %></h3>
  <h3>Movie Showtimes</h3>
  <% @movies.each do |movie| %>
    <div class="well">
      <h3><%= link_to movie.title, theater_movie_path(@theater, movie) %></h3>
      <% movie.movie_screenings.each do |movie_screening| %>
        <%= link_to movie_screening.start_time, movie_movie_screening_path(movie, movie_screening), class: "btn btn-sm btn-primary" %>
      <% end %>
    </div>
  <% end %>
</div>
 
