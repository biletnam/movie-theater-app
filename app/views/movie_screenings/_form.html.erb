<%= form_for([@movie, @movie_screening]) do |f| %>
  <% if @movie_screening.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie_screening.errors.count, "error") %> prohibited this movie screening from being saved:</h2>

      <ul>
      <% @movie_screening.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="well">
  
    <div class="form-group">
      <%= f.hidden_field :theater_id, value: @movie.theater.id, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.hidden_field :movie_id, value: @movie.id, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :screening_date %>
      <%= f.date_select :screening_date, { order: [:month, :day, :year] } %>
    </div>

    <div class="form-group">
      <%= f.label :start_time %>
      <%= f.time_select :start_time, { :ampm => true, :include_blank => true } %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-default" %>
    <% if @movie_screening.id %>
      <%= link_to 'Back To Screening', movie_movie_screening_path(@movie, @movie_screening), class: "btn btn-default" %>
    <% end %>
    <%= link_to 'Back To Movie', theater_movie_path(@theater, @movie), class: "btn btn-default" %>
  </div>
  <br>
<% end %>
