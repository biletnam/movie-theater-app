<div>
  <div>
    <h1><%= @movie.title %></h1>

    <p>
      <strong>Theater:</strong>
      <%= @theater.name %>
    </p>

    <p>
      <strong>Auditorium:</strong>
      <%= @movie.auditorium.name %>
    </p>

    <p>
      <strong>Run Time:</strong>
      <%= @movie.run_time_hours %>
    </p>

    <p>
      <strong>Ticket Price:</strong>
      <%= number_to_currency(@movie.ticket_price) %>
    </p>
  </div>
  
  <%= link_to 'Edit', edit_theater_movie_path(@theater, @movie), class: "btn btn-default" %>
  <%= link_to 'Back', theater_movies_path(@theater), class: "btn btn-default" %>
  <%= link_to 'Add Screening', new_movie_movie_screening_path(@movie), class: "btn btn-default" %>
  <%= link_to 'Delete', theater_movie_path(@theater, @movie), method: :delete, class: "btn btn-default" %>

  <div>
    <h3 class="text-center">Screenings</h3>

    <% @movie.movie_screenings.each do |movie_screening| %>
      <div class="well">
        <h3><%= link_to movie_screening.friendly_start_time, movie_movie_screening_path(@movie, movie_screening), class: "disable" %></h3>
        <p>
          <strong>Theater: </strong>
          <%= movie_screening.movie.theater.name %>
        </p>
        <p>
          <strong>Auditorium: </strong>
          <%= movie_screening.movie.auditorium.name %>
        </p>
        <% if movie_screening.sold_out? %>
          <h4 class="sold-out"><strong>Sold Out!</strong></h4>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
