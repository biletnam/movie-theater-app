<h1>Your Ticket Order Details</h1>

<h3>Customer Information</h3>

<p>
  <strong>Order Date: </strong>
  <%= @ticket_order.order_date %>
</p>

<p>
  <strong>Order Name:</strong>
  <%= @ticket_order.name %>
</p>

<p>
  <strong>Order Email:</strong>
  <%= @ticket_order.email %>
</p>

<h3>Movie Details</h3>

<p>
  <strong>Movie:</strong>
  <%= @movie_screening.movie.title %>
</p>

<p>
  <strong>Theater:</strong>
  <%= @movie_screening.movie.theater.name %>
</p>

<p>
  <strong>Auditorium:</strong>
  <%= @movie_screening.movie.auditorium.name %>
</p>

<p>
  <strong>Screening Date: </strong>
  <%= @movie_screening.friendly_screening_date %>
</p>

<p>
  <strong>Start Time:</strong>
  <%= @movie_screening.friendly_start_time %>
</p>

<p>
  <strong>Run Time:</strong>
  <%= @movie_screening.movie.run_time_hours %>
</p>

<h3>Payment Details</h3>

<p>
  <strong>Credit Card:</strong>
  <%= @ticket_order.starred_cc_number %>
</p>

<p>
  <strong>Credit Card Expiration Date:</strong>
  <%= @ticket_order.cc_expiration_date %>
</p>

<p>
  <strong>Total:</strong>
  <%= number_to_currency(@ticket_order.price) %>
</p>
