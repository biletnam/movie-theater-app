<div class="thumbnail padding-20">
  <h1>Ticket Orders For: <%= @movie_screening.movie.title %></h1>

  <div class="divider-20"></div>

  <div class="well">
    <h3>Movie Screening Details</h3>

    <div class="divider-10"></div>

    <div class="thumbnail padding-20">
      <p>
        <strong>Auditorium: </strong>
        <%= @movie_screening.movie.auditorium.name %>
      </p>
      <p>
        <strong>Screening Time: </strong>
        <%= @movie_screening.friendly_start_time %>
      </p>
      <p>
        <strong>Tickets Sold: </strong>
        <%= @movie_screening.tickets_sold %>
      </p>
      <p>
        <strong>Tickets Available: </strong>
        <%= @movie_screening.tickets_remaining %>
      </p>
    </div>
  </div>

  <% @ticket_orders.each do |ticket_order| %>
    <div class="well">
      <h3>Ticket Orders</h3>

      <div class="divider-10"></div>
    
      <div class="thumbnail padding-20">
        <p>
          <strong>Customer: </strong>
          <%= ticket_order.name %>
        </p>
        <p>
          <strong>Order Total: </strong>
          <%= ticket_order.price %>
        </p>

        <%= link_to 'Order Details', movie_screening_ticket_order_path(@movie_screening, ticket_order), class: "btn btn-xs btn-default" %>
        <%= link_to 'Delete', movie_screening_ticket_order_path(@movie_screening, ticket_order), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-xs btn-default" %>
      </div>
    </div>
  <% end %>
</div>